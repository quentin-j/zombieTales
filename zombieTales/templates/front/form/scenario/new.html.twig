{% extends 'base.html.twig' %}

{% block title %}ajout d'un nouveau scénario{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('CSS/form.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}
{% block body %}
{{ form_start(form) }}
<div class="formContainer">
    <div class="mb-3">
        <label for="" class="form-label formTitle">Titre</label>
        {{ form_widget(form.title) }}
    </div>
    <div class="mb-3 formHistory">
        <label for="" class="form-label">Histoire</label>
        {{ form_widget(form.history)}}
    </div>
    <div class="formRow">
        <div class="mb-3">
            <label for="formFile" class="form-label">votre map au format .png</label>
            {{ form_widget(form.imageFile) }}
        </div>
        <div class="mb-3">
            <label for="" class="form-label">time</label>
            {{ form_widget(form.time) }}
        </div>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">nombre de survivants (de 1 à 6)</label>
        {{ form_widget(form.survivors) }}
    </div>
    <div class="formRow">
        <div class="mb-3">
            <label for="" class="form-label">Difficulté</label>
            {{ form_widget(form.difficulty) }}
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Version</label>
            {{ form_widget(form.version) }}
        </div>
    </div>
    {{ form_widget(form.author) }}
    <div class="mb-3">
        <button  class="btn btn-primary mb-3">Objectifs</button>
    </div>
</div>
{{ form_end(form) }}

{% endblock %}